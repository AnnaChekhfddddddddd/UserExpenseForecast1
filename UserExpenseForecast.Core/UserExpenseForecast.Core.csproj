<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Автоматично створювати NuGet-пакет при pack/build -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <!-- Метадані NuGet-пакета -->
    <PackageId>UserExpenseForecast.Core</PackageId>
    <Version>1.0.0</Version>
    <Authors>Anna Chekh</Authors>
    <Company>KNU FIT</Company>
    <Description>FinTech library for expense tracking and forecasting.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

</Project>
